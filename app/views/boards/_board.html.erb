<div class="mt-4 text-center">
  <table class="table table-bordered" cellpadding="0" cellspacing="0" style="width: <%= 32*@board.board_width %>px;margin-right: auto;margin-left: auto">
    <% @board.board_matrix.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <% if cell == 1 %>
            <td width="32" style="padding: 0"><img src="/assets/bomb.png" width="32px"></td>
          <% else %>
            <td width="32" style="padding: 0"><img src="/assets/rectangle.png" width="32px"> </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-6 text-start">
      <div class="text-center mt-4">
        <%= link_to 'View All Generated Boards', boards_path, class: 'btn btn-info float-left' %>
      </div>
    </div>
    <div class="col-md-6 text-end">
      <div class="text-center mt-4">
        <%= link_to 'Create new board', new_board_path, class: 'btn btn-info float-right' %>
      </div>
    </div>
  </div>

</div>

</div>