<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Create a New Minesweeper Board</h1>

      <%= form_with(model: @board, url: boards_path, method: :post, class: "form") do |f| %>
        <% if @board.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @board.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :width %>
          <%= f.number_field :board_width, class: "form-control", required: true, min: 1 %>
        </div>

        <div class="form-group">
          <%= f.label :height %>
          <%= f.number_field :board_height, class: "form-control", required: true, min: 1 %>
        </div>

        <div class="form-group">
          <%= f.label :mines %>
          <%= f.number_field :num_mines, class: "form-control", required: true, min: 1, max: @board.max_mines %>
        </div>

        <div class="form-group">
          <%= f.submit "Generate Board", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
